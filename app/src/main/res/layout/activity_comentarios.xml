<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9403D"
    tools:context=".vieww.ui.fragments.CommentsDetailDialogFragment">

    <ImageButton
        android:id="@+id/vbotonperfil4"
        android:layout_marginTop="700dp"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_marginLeft="240dp"
        android:background="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageButton
        android:id="@+id/vhome4"
        android:layout_marginTop="700dp"
        android:layout_marginLeft="100dp"
        android:layout_width="76dp"
        android:layout_height="82dp"
        android:layout_marginBottom="16dp"
        android:background="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vbotonperfil3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_outline_home_24"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/lato_bold_italic"
            android:gravity="center_horizontal"
            android:text="Mi comentario"
            android:textColor="@color/secondaryTextColor"
            android:textSize="34sp" />

        <Spinner
            android:id="@+id/spinnerScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Nombre"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/etComments2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Email"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/etComments3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Comentario"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btSaveComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/secondaryDarkColor"
            android:fontFamily="@font/lato_bold_italic"
            android:text="Enviar" />


    </LinearLayout>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comentario1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold_italic"
                android:gravity="left|top"
                android:text="Bryan"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsUser" />

            <TextView
                android:id="@+id/comentario2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="5/5"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsScore" />

            <TextView
                android:id="@+id/tvItemCommentsUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold_italic"
                android:gravity="left|top"
                android:text="Laura"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsUser" />

            <TextView
                android:id="@+id/tvItemCommentsScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="5/5"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsScore" />

            <TextView
                android:id="@+id/tvItemCommentsUser3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold_italic"
                android:gravity="left|top"
                android:text="Danna"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsUser" />

            <TextView
                android:id="@+id/tvItemCommentsScore3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="4/5"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsScore" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultLayoutMargin"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tcomentario1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="De los mejores cafÃ©s que he probado"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsComment" />
            <TextView
                android:id="@+id/tcomentario2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="Buena calidad"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsComment" />
            <TextView
                android:id="@+id/tcomentario3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="left|top"
                android:text="Buenos precios"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsComment" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="75dp"
        android:layout_height="79dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="480dp"
        android:background="@color/primaryDarkColor"
        app:srcCompat="@drawable/ic_outline_home_24"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/volverButton"
        android:layout_width="77dp"
        android:layout_height="82dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="-80dp"
        android:background="@color/primaryDarkColor"
        app:srcCompat="@drawable/abc_vector_test" />

    <ImageButton
        android:id="@+id/ponercomentario"
        android:layout_width="97dp"
        android:layout_height="91dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-300dp"
        android:background="@color/secondaryDarkColor"
        app:srcCompat="@drawable/comentario48" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2F2"
    tools:context=".vieww.ui.activities.Producto1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="265dp"
                android:layout_height="399dp"
                android:layout_marginLeft="70dp"
                app:srcCompat="@drawable/producto1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="376dp"
                android:layout_height="96dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="400dp"
                android:fontFamily="@font/lato_bold_italic"
                android:text="Café Sofía Real Gourmet"
                android:textColor="@color/primaryDarkColor"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="440dp"
                android:layout_marginLeft="165dp"
                android:fontFamily="@font/lato_bold_italic"
                android:text="2500g"
                android:textColor="@color/primaryColor"
                android:textSize="25sp"  />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="470dp"
                android:layout_marginLeft="145dp"
                android:fontFamily="@font/lato_bold_italic"
                android:text="$78.000"
                android:textColor="@color/primaryColor"
                android:textSize="27sp"  />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="510dp"
                android:fontFamily="@font/lato_bold_italic"
                android:text="Café tostado, molido o en grano, proveniente de la mejor selección de granos de la finca Sofía Real. Ideal para tiendas de café especializadas. Aroma y sabor exquisitos. Acidez media - alta "
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp" />

            <Button
                android:id="@+id/carrito1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="660dp"
                android:background="@color/secondaryDarkColor"
                android:fontFamily="@font/lato_bold_italic"
                android:text="AGREGAR AL CARRITO"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/apagina2"
                android:layout_width="85dp"
                android:layout_height="56dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="810dp"
                android:background="@color/primaryDarkColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/ic_menu_revert"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/vbotonhome12"
                android:layout_width="85dp"
                android:layout_height="56dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="810dp"
                android:background="@color/primaryDarkColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_outline_home_24"
                tools:ignore="VectorDrawableCompat" />


        </FrameLayout>/
    </ScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    tools:context=".vieww.ui.fragments.AdminDetailDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/defaultLayoutMargin"
            app:cardCornerRadius="@dimen/cardElevation"
            app:cardElevation="@dimen/cardElevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibPhotoAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="228dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/primaryDarkColor"
                    android:src="@drawable/iconousuario148" />


                <EditText
                    android:id="@+id/etNameAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultLayoutMargin"
                    android:fontFamily="@font/lato_bold_italic"
                    android:gravity="center_horizontal"
                    android:hint="Nombre"
                    android:inputType="textMultiLine"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/etDireccionAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultLayoutMargin"
                    android:fontFamily="@font/lato_bold_italic"
                    android:gravity="center_horizontal"
                    android:hint="DirecciÃ³n"
                    android:inputType="textMultiLine"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/etTelefonoAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultLayoutMargin"
                    android:fontFamily="@font/lato_bold_italic"
                    android:gravity="center_horizontal"
                    android:hint="Telefono"
                    android:inputType="textMultiLine"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/etEmailAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultLayoutMargin"
                    android:fontFamily="@font/lato_bold_italic"
                    android:gravity="center_horizontal"
                    android:hint="Correo"
                    android:inputType="textMultiLine"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btSaveChanges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/defaultLayoutMargin"
                    android:background="@color/primaryDarkColor"
                    android:text="Guardar cambios" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9403D"
    tools:context=".vieww.ui.fragments.CommentsDetailDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/lato_bold_italic"
            android:gravity="center_horizontal"
            android:text="Mi comentario"
            android:textColor="@color/secondaryTextColor"
            android:textSize="34sp" />




        <Spinner
            android:id="@+id/spinnerScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Comentario"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btSaveComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/secondaryDarkColor"
            android:fontFamily="@font/lato_bold_italic"
            android:text="Guardar comentario" />


    </LinearLayout>


</FrameLayout>
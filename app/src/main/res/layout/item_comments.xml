<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemCommentsUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold_italic"
                android:gravity="left|top"
                android:text="Usuario"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsUser" />

            <TextView
                android:id="@+id/tvItemCommentsScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="5/5"
                android:textSize="@dimen/itemCommentsScore"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/defaultLayoutMargin">

            <TextView
                android:id="@+id/tvItemCommentsComent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De los mejores cafÃ©s que he probado"
                android:gravity="left|top"
                android:textSize="@dimen/itemCommentsComment"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>